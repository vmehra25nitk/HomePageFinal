<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id = "@+id/dl"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

        <ScrollView android:fillViewport="true" android:layout_width="match_parent" android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" android:background="#800000" tools:context=".MainActivity">

        <ImageView android:layout_width="match_parent" android:layout_height="280dp" android:src="@drawable/ic_launcher_background" android:scaleType="centerCrop" android:id="@+id/image_view"/>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linear" android:orientation="horizontal" android:layout_below="@id/image_view">

        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/Button1" android:text="Notification" android:onClick="clicked" android:layout_weight="3"/>

        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/Button2" android:text="Event" android:onClick="clicked" android:layout_weight="2"/>

        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/Button3" android:text="Profile" android:onClick="clicked" android:layout_weight="2"/>

        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/Button4" android:text="Relation" android:onClick="clicked" android:layout_weight="3"/>

    </LinearLayout>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text4_view"
            android:layout_below="@id/linear"
            android:text="ABOUT US :"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text3_view"
            android:layout_below="@id/text4_view"
            android:text="This app has been supporting entrepreneurs by offering education, mentorship, networking and funding opportunities. Our mission is to foster entrepreneurship globally through the 5 pillars : mentoring, networking and education, funding and incubation. Dedicated to the virtuous cycle of wealth creation and giving back to the community. Our focus area is to generate enable the next generation of entrepreneurs.Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions. "
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textn_view"
            android:layout_below="@id/text3_view"
            android:text="Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions" android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto_view"
            android:layout_below="@id/textn_view"
            android:text="Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions" android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textp_view"
            android:layout_below="@id/texto_view"
            android:text="Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textq_view"
            android:layout_below="@id/textp_view"
            android:text="Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textr_view"
            android:layout_below="@id/textq_view"
            android:text="Our mentors represent a diverse set of industries, including high technology software, hardware, health care, biotech, media, telecom, IT enabled services, consulting organizations, financial and legal institutions"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mission_text_view"
            android:layout_below="@id/textr_view"
            android:text="Mission :"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1_view"
            android:layout_below="@id/mission_text_view"
            android:text="Our mission is to foster entrepreneurship through mentoring, networking, education, funding and incubation.With a focus of giving back to the community,out focus is on generating and nurturing the next generation of entrepreneurs."
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vision_text_view"
            android:layout_below="@id/text1_view"
            android:text="Vision :"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2_view"
            android:layout_below="@id/vision_text_view"
            android:text="By assisting entrepeneurs, we believe we can empower individuals and create wealth in communities"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    </ScrollView>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navView"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        ></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>